@model NavigateAddViewModel

<form id="form" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">父导航</label>
        <div class="col-sm-10">
            <select id="tree_select" class="select2" name="ParentNavigateID">
                <option value="-1">控制台</option>
                @{
                    foreach (var item in Model.NavigateViewModels)
                    {
                        if (item.ParentID.HasValue)
                        {
                            <option value="@item.ID" parent="@item.ParentID.Value">@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.ID" parent="-1">@item.Name</option>
                        }
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">控制器</label>
        <div class="col-sm-10">
            <select id="select_controller" class="select2" name="ControllerName" style="width:100%">
                @{
                    foreach (var item in Model.Controllers)
                    {
                        <option value="@item">@item</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">动作行为</label>
        <div class="col-sm-10">
            <select id="select_action" class="select2" name="ActionName" style="width:100%">
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="showName" class="col-sm-2 control-label">显示名称</label>
        <div class="col-sm-10">
            <input type="text" required name="ShowName" class="form-control" id="showName" placeholder="显示名称">
        </div>
    </div>
    <div class="form-group">
        <label for="iconClass" class="col-sm-2 control-label">图标样式</label>
        <div class="col-sm-10">
            <input type="text" required name="IconClassName" class="form-control" id="iconClass" placeholder="图标样式">
        </div>
    </div>
    <div class="form-group">
        <label for="sortOrder" class="col-sm-2 control-label">排序</label>
        <div class="col-sm-10">
            <input type="number" required name="SortOrder" class="form-control" id="sortOrder" placeholder="排序">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox" checked> 是否激活
                    <input type="hidden" id="IsActive" name="IsActive" value="true"/>
                </label>
            </div>
        </div>
    </div>
</form>